
@if (User.IsInRole("admin"))
{
    @Html.Raw("<h3>Admin`s panel</h3>");
    @Html.ActionLink("Editing courses", "Index", "Admin", null,
    new { @class = "btn btn-block btn-primary btn-lg custom" })

    @Html.ActionLink("Teachers: adding and appointment", "TeacherAppointView", "Admin", null,
    new { @class = "btn btn-block btn-primary btn-lg custom" })

